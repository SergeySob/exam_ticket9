<Window x:Class="exam_ticket9.ReplaceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:exam_ticket9"
        mc:Ignorable="d"
        Title="ReplaceWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Find what:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,10,0,0"/>
        <TextBox Name="OldTextBox" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,30,10,0" Height="25"/>

        <Label Content="Replace with:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,60,0,0"/>
        <TextBox Name="NewTextBox" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,80,10,0" Height="25"/>

        <Button Content="Replace" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,120,0,0" Click="ReplaceText_Click"/>
    </Grid>
</Window>
